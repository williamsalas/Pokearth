<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokearth">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokearth"
        android:usesCleartextTraffic="true">

        <activity android:name=".ItemActivity"/>
        <activity android:name=".BiomeActivity"></activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".PlayActivity" />
        <activity android:name=".FightActivity" />
        <activity android:name=".InventoryActivity" />
        <activity android:name=".ShopActivity" />
        <activity android:name=".BallShopActivity" />
        <activity android:name=".PokeMartActivity"/>
        <activity android:name=".pokedex.PokedexActivity"/>
        <activity android:name=".pokedex.PokemonActivity"/>
        <activity android:name=".storage.PokemonStorageActivity"/>
        <activity android:name=".storage.IndividualStorageActivity"/>
        <activity android:name=".PartyActivity"/>

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>